@page
@model Shop.UI.Pages.Admin.StockModel
@{
    ViewData["Title"] = "Stock";
}

<div id="app">
    <div class="columns">
        <div class="column is-3">
            <table class="table">
                <tr v-for="product in products" v-on:click="selectProduct(product)">
                    <td>{{product.description}}</td>
                </tr>
            </table>
        </div>
        <div class="column is-6">
            <table class="table" v-if="selectedProduct">
                <tr v-for="(stock,index) in selectedProduct.stocks">
                    <td><input class="input" v-model="stock.description" /></td>
                    <td><input class="input" v-model.number="stock.qty" /></td>
                    <td><a class="has-text-danger" v-on:click="deleteStock(stock.id,index)">Delete Stock</a></td>
                </tr>                
            </table>
            <a class="button is-warning is-rounded" v-on:click="updateStock">Update Stock</a>
        </div>
        <div class="column is-3" v-if="selectedProduct">
            <h2 class="title">New Stock</h2>
            <div class="field">
                <div class="control">
                    <input class="input" v-model="newStock.description" />
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <input class="input" v-model.number="newStock.qty" />
                </div>
            </div>    
            <a class="button is-success is-rounded" v-on:click="addStock">Add Stock</a>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/admin/stock.js"></script>
}