@page
@model Shop.UI.Pages.Checkout.CustomerInformationModel
@{
    ViewData["Title"] = "CustomerInformation";
}

<h1>CustomerInformation</h1>
<div>
    <form method="post">

        <div>
            <input asp-for="CustomerInfo.FirstName" />
            <span asp-validation-for="CustomerInfo.FirstName"></span>
        </div>
     
        <div>
            <input asp-for="CustomerInfo.LastName" />
            <span asp-validation-for="CustomerInfo.LastName"></span>
        </div>
     
        <div>
            <input asp-for="CustomerInfo.PhoneNo" />
            <span asp-validation-for="CustomerInfo.PhoneNo"></span>
        </div>
  
        <div>
            <input asp-for="CustomerInfo.Email" />
            <span asp-validation-for="CustomerInfo.Email"></span>
        </div>
       
        <div>
            <input asp-for="CustomerInfo.Address1" />
            <span asp-validation-for="CustomerInfo.Address1"></span>
        </div>

        <div>
            <input asp-for="CustomerInfo.Address2" />
        </div>

        <div>
            <input asp-for="CustomerInfo.City" />
            <span asp-validation-for="CustomerInfo.City"></span>
        </div>
        
        <div>
            <input asp-for="CustomerInfo.PostCode" />
            <span asp-validation-for="CustomerInfo.PostCode"></span>
        </div>        

        <button type="submit">Submit</button>
    </form>
</div>

